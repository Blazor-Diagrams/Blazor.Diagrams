@page "/demos/simple"
@inherits SimpleComponent
@layout DemoLayout
@inject LayoutData LayoutData

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();

        LayoutData.Title = "Simple";
        LayoutData.Info = "A simple example of Blazor.Diagrams.";
        LayoutData.DataChanged();
    }
}

<CascadingValue Name="DiagramManager" Value="diagramManager">
    <DiagramCanvas>
        <Widgets>
            <Navigator Width="300" Height="300" DefaultStyle="true"></Navigator>
        </Widgets>
    </DiagramCanvas>
</CascadingValue>
