@page "/demos/groups"
@inherits GroupingComponent
@layout DemoLayout
@inject LayoutData LayoutData

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();

        LayoutData.Title = "Grouping";
        LayoutData.Info = "You can (un)group nodes using CTRL+ALT+G.<br>" +
                "Currently, the library doesn't handle nested groups yet nor ports.";
        LayoutData.DataChanged();
    }
}

<CascadingValue Value="BlazorDiagram">
    <DiagramCanvas>
        <Widgets>
            <NavigatorWidget Width="300"
                             Height="200"
                             Style="position: absolute; bottom: 15px; right: 15px; border: 1px solid black;">
            </NavigatorWidget>
        </Widgets>
    </DiagramCanvas>
</CascadingValue>
